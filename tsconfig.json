{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@lib/*": ["lib/*"],
      "@components/*": ["Components/*"],
      "@widgets/*": ["Components/Widgets/*"],
      "@store/*": ["lib/store/*"],
    }
  }
}
